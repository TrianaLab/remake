{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Remake CLI",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "${input:remakeCommand}",
        "${input:remakeArg}"
      ],
      "env": {},
      "dlvFlags": []
    },
    {
      "name": "Remake Login",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "login",
        "${input:registry}",
        "--username",
        "${input:username}",
        "--password",
        "${input:password}"
      ],
      "env": {},
      "dlvFlags": []
    }
  ],
  "inputs": [
    {
      "id": "remakeCommand",
      "type": "pickString",
      "description": "Choose remake command",
      "options": ["run", "pull", "push", "template", "login", "version"]
    },
    {
      "id": "remakeArg",
      "type": "promptString",
      "description": "Argument (e.g. oci://... or make target)",
      "default": ""
    },
    {
      "id": "registry",
      "type": "promptString",
      "description": "Registry endpoint",
      "default": "ghcr.io"
    },
    {
      "id": "username",
      "type": "promptString",
      "description": "Username",
      "default": ""
    },
    {
      "id": "password",
      "type": "promptString",
      "description": "Password",
      "default": ""
    }
  ]
}