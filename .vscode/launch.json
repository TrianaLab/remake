{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "reference",
      "description": "Makefile reference, either local or remote OCI/HTTP(s).",
      "type": "promptString",
    },
    {
      "id": "target",
      "description": "Makefile target to run.",
      "type": "promptString",
    },
    {
      "id": "file",
      "description": "Local makefile to push.",
      "type": "promptString",
    },
    {
      "id": "loginRegistry",
      "description": "OCI registry to login.",
      "type": "promptString",
    },
    {
      "id": "loginUsername",
      "description": "Username to login.",
      "type": "promptString",
    },
    {
      "id": "loginPassword",
      "description": "Password to login.",
      "type": "promptString",
      "password": true,
    },
  ],
  "configurations": [
    {
      "name": "Remake Login",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "login",
        "${input:loginRegistry}",
        "--username",
        "${input:loginUsername}",
        "--password",
        "${input:loginPassword}",
      ]
    },
    {
      "name": "Remake Run",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [
        "run",
        "--file",
        "${input:reference}",
        "--no-cache",
        "${input:noCache}",
        "${input:target}",
      ]
    },
    {
      "name": "Remake Pull",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "pull",
        "${input:reference}",
      ]
    },
    {
      "name": "Remake Push",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "push",
        "${input:reference}",
        "--file",
        "${input:file}",
      ]
    },
    {
      "name": "Remake Version",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "version"
      ]
    }
  ]
}
